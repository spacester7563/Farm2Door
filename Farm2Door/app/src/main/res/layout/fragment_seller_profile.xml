<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.Seller.SellerProfileFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/buyerProfileRl"
        android:layout_width="match_parent"
        app:cardCornerRadius="15dp"
        app:cardElevation="6dp"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:id="@+id/sellerProfileRl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"

            android:paddingVertical="30dp"
            android:paddingHorizontal="10dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_person_24"
                app:civ_border_color="@color/white"
                app:civ_border_width="2dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/profile_image"
                android:layout_centerInParent="true"
                android:paddingLeft="10dp">
                <TextView
                    android:id="@+id/shopName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JowelShop"
                    android:textColor="@color/colorPrimary"

                    android:textSize="20sp"
                    android:fontFamily="@font/black"/>
                <TextView
                    android:layout_marginTop="8dp"
                    android:id="@+id/sellerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/shopName"
                    android:text="JowelAhmedHim"
                    android:textColor="#313131"
                    android:textSize="18sp"
                    android:fontFamily="@font/bold"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_marginTop="8dp"
                    android:id="@+id/shopEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sellerName"
                    android:text="JowelAhmedHim@gmail.com"
                    android:textSize="16sp"
                    android:textColor="#313131"
                    android:fontFamily="@font/bold"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/verifyTv"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/shopEmail"
                    android:text="Not verified"
                    android:fontFamily="@font/antic"
                    android:textColor="@color/white"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:background="@drawable/shape_rec6"/>

            </RelativeLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/addProduct"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:padding="10dp"
            android:src="@drawable/ic_baseline_add_shopping_cart_24"
            android:layout_width="45dp"
            android:layout_height="45dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:text="Add Product"
            android:layout_marginStart="8dp"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:textColor="#313131"
            android:fontFamily="@font/bold_roboto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/editProfile"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:padding="10dp"
            android:src="@drawable/ic_baseline_edit_24"
            android:layout_width="45dp"
            android:layout_height="45dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:text="Edit Profile"
            android:layout_marginStart="8dp"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:textColor="#313131"
            android:fontFamily="@font/bold_roboto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/reviews"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:padding="10dp"
            android:src="@drawable/ic_baseline_star_24"
            android:layout_width="45dp"
            android:layout_height="45dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:text="Reviews"
            android:layout_marginStart="8dp"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:textColor="#313131"
            android:fontFamily="@font/bold_roboto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/promoCode"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:padding="10dp"
            android:src="@drawable/ic_baseline_rate_review_24"
            android:layout_width="45dp"
            android:layout_height="45dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:text="PromoCode"
            android:layout_marginStart="8dp"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:textColor="#313131"
            android:fontFamily="@font/bold_roboto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/settings"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:padding="10dp"
            android:src="@drawable/ic_baseline_settings_24"
            android:layout_width="45dp"
            android:layout_height="45dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:text="Settings"
            android:layout_marginStart="8dp"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:textColor="#313131"
            android:fontFamily="@font/bold_roboto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/logout"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:padding="10dp"
            android:src="@drawable/ic_baseline_power_settings_new_24"
            android:layout_width="45dp"
            android:layout_height="45dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:text="Logout"
            android:layout_marginStart="8dp"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:textColor="#313131"
            android:fontFamily="@font/bold_roboto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>



</LinearLayout>